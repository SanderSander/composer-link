{
    "name": "sandersander/composer-link",
    "description": "Adds ability to link local packages for development with composer",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "SanderSander",
            "email": "themastersleader@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "ComposerLink\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "composer-plugin-api": "^2.6"
    },
    "require-dev": {
        "composer/composer": "^2.6",
        "friendsofphp/php-cs-fixer": "^v3.15.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5.38",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpmd/phpmd": "^2.12",
        "phpstan/phpstan-strict-rules": "2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0"
    },
    "extra": {
        "class": "ComposerLink\\Plugin"
    },
    "scripts": {
        "phpmd": "./vendor/bin/phpmd ./src,./tests ansi ruleset.xml",
        "test": "./vendor/bin/phpunit --testsuite=Unit",
        "test-integration": [
            "docker build -t composer-link-test ./support && docker run --rm -v $PWD:/app composer-link-test"
        ],
        "phpstan": "./vendor/bin/phpstan",
        "lint": "./vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        }
    }
}
